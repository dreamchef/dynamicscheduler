<%- include('../partials/header'); %>
</head>
    &nbsp;
    <div class='container'>
        <h1 class='text-center'>Tasks</h1> 
        <div class='text-center'>
                <div class='row' style='background-color: lightblue;'>
                    <div class='col-4'>
                        Name
                    </div>
                    <div class='col-4'>
                        Deadline
                    </div>
                    <div class='col-1'>
                        Length
                    </div>
                    <div class='col-3'>
                        Type
                   </div>
                </div>
                <form action="/tasks/create" method="POST">
                    <div class='row' style='margin: 10px;'>
                        <div class='col-4'>
                            <input class = 'form-control' type="text" name="newTaskName" id="newTaskName">
                        </div>
                        <div class ='col-2'>
                            <input class = 'form-control' type="date" name="newTaskDeadline" id="newTaskDeadline">
                        </div>
                        <div class='col-2'>
                            <input class = 'form-control' type="time" name="newTaskDeadlineTime" id="newTaskDeadlineTime">
                        </div>
                        <div class='col-1'>
                            <input class = 'form-control' type="number" step='0.1' min='0' class="form-control" name="newTaskLength" id="newTaskLength" placeholder="hrs">
                        </div>
                        <div class='col-3'>
                            <input class = 'form-control' type="text" name="newTaskType" id="newTaskType">
                        </div>
                    </div>
                    <div class='row d-flex justify-content-center' style='margin: 10px;'>
                        <div class='col'></div>
                        <div class='col'>
                            <input type="submit" class="form-control" value='Create New'>
                        </div>
                        <div class='col'></div>
                    </div>    
                </form>
            </div>
        <h2 class='text-center'>Queue</h2>
        <div class='text-center'>
        <% for(var i = 0; i < tasks.length; i++) { %>
            <div class='row'>
                <div class='col-5'>
                    <%= tasks[i].name %>
                </div>
                <div class='col-2'>
                    <%= tasks[i].deadline %>
                </div>
                <div class='col-1'>
                    <%= tasks[i].deadlineTime %>
                </div>
                <div class='col-1'>
                    <%= tasks[i].length %>
                </div>
                <div class='col-3'>
                    <%= tasks[i].type %>
                </div> 
            </div>
        <% } %>
        </div>
    </div>
<body>
    <%- include('../partials/footer'); %>
