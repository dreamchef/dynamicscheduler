<%- include('../partials/header'); %>
</head>
    &nbsp;
    <div class='container'>
        <h1 class='text-center'>Tasks</h1> 
        <div class='text-center'>
            <div class='row' style='background-color: lightblue;'>
                <div class='col'>
                    Name
                </div>
                <div class='col'>
                    Deadline
                </div>
                <div class='col'>
                    Length (hours)
                </div>
                <div class='col'>
                    Type
                </div>
            </div>
            <div>
                <form action="/tasks/create" method="POST">
                    <div class='row'  style='background-color: gainsboro;>
                        <input class = 'col form-control' type="text" name="newTaskName" id="newTaskName">
                        <input class = 'col form-control' type="date" name="newTaskDeadline" id="newTaskDeadline">
                        <input class = 'col form-control' type="number" step='0.1' min='0' class="form-control" name="newTaskLength" id="newTaskLength">
                        <input class = 'col form-control' type="text" name="newTaskType" id="newTaskType">
                    </div>
                    <div class='row'  style='background-color: gainsboro;>
                        <div class='col'>
                            <input type="submit" value='Create New'>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        &nbsp;
        &nbsp;
        <h1 class='text-center'>Queue</h1>
        <div class='text-center' style='background-color: gainsboro;'>
        <% for(var i = 0; i < tasks.length; i++) { %>
            <% console.log(tasks[i]); %>
            <div class='row'>
                <div class='col'>
                    <%= tasks[i].name %>
                </div>
                <div class='col'>
                    <%= tasks[i].deadline.toString().substring(0, 15) %>
                </div>
                <div class='col'>
                    <%= tasks[i].length %>
                </div>
                <div class='col'>
                    <%= tasks[i].type %>
                </div> 
            </div>
        <% } %>
    </div>
    </div>
