<%- include('../partials/header'); %>
</head>
    &nbsp;
    <div class='container'>
        <form action="/tasks/create" method="POST">
            <div class='row' style='background-color: gainsboro; padding: 10px;'>
                <div class='col'>
                    <p style='margin: 8px;'>New task</p> 
                </div>
                <div class='col-4'>
                    <input type="text" class="form-control" name="newTaskName" id="newTaskName" placeholder="name">
                </div>
                <div class='col'>
                    <input type="date" class="form-control" name="newTaskDeadline" id="newTaskDeadline" placeholder="deadline">
                </div>
                <div class='col'>
                    <input type="number" step='0.1' min='0' class="form-control" name="newTaskLength" id="newTaskLength" placeholder="hours">
                </div>
                <div class='col'>
                    <input type="text" class="form-control" name="newTaskType" id="newTaskType" placeholder="type">
                </div>
                <div class='col'>
                    <input type="submit" class="form-control" value='Create'>
                </div>
            </div>
        </form>
        &nbsp;
        &nbsp;
        <h1 class='text-center'>Task Queue</h1> 
        <div class='row' style='background-color: lightblue; padding: 10px;'>
            <div class='col'>
                Name
            </div>
            <div class='col'>
                Deadline
            </div>
            <div class='col'>
                Length (hours)
            </div>
            <% if(false) { %>
            <div class='col'>
                Type
            </div>
            <% } %>
        </div>
        <% for(var i = 0; i < tasks.length; i++) { %>
            <% console.log(tasks[i]); %>
            <div class='row' style='padding: 10px;'>
                <div class='col'>
                    <%= tasks[i].name %>
                </div>
                <div class='col'>
                    <%= tasks[i].deadline %>
                </div>
                <div class='col'>
                    <%= tasks[i].length %>
                </div>
                <% if(false) { %>
                <div class='col'>
                    <%= types[tasks[i].type_id].name %>
                </div>
                <% } %> 
            </div>
        <% } %>
    </div>
<body>
    <%- include('../partials/footer'); %>
